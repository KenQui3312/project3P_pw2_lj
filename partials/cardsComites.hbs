<div class="comite-section">
    <div class="comite-header">
        <h2>{{nombre}}</h2>
    </div>
    <div class="comite-content">
        <div class="comite-descripcion">
            <p>{{descripcion}}</p>
        </div>
        <div class="integrantes-section">
            <h3 class="integrantes-title">Integrantes</h3>
            <div class="coordinador">
                <p>{{coordinador}} (coordinador): 
                    <a href="mailto:{{email}}">{{email}}</a>
                </p>
            </div>
            <ul>
                {{#each miembros}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>